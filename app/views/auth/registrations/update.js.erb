mark_all_input_fields_valid();
<% if resource.errors.size > 0 %>
	<% resource.errors.each do |attrib,message| %>
			var resource_name = "<%= resource.class.name.underscore %>";
			var field_id = resource_name + "_" + "<%= attrib %>";
			invalidate_input_field(field_id,"<%= message.html_safe %>");
	<% end %>
<% else %>
	console.log("registration change success");
	$("#login_title").html("Account Settings Successfully Updated!");
	$("#login_content").html("<%= escape_javascript(render partial:'auth/modals/edit_account_success_content.html.erb', locals: {resource: resource} ) %>");
	hide_oauth();
	$("#login_footer").hide();
<% end %>
open_sign_in_modal_if_closed();