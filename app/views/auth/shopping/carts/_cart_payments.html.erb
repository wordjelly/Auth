<% total_paid = 0 %>
<table>
    <thead>
     	<tr>
          	<th>Date</th>
          	<th>Payment Type</th>
          	<th>Payment Status</th>
          	<th>Amount</th>
      	</tr>
    </thead>
    <tbody>
    	<% payments.each do |payment| %>
    		<tr>
    		<th><%= link_to payment.updated_at.to_s, shopping_payment_path(payment.id.to_s) %></th>
    		<th><%= payment.payment_type %></th>
    		<th>
    			<%= payment_error_message(payment) %>
    			<% total_paid+= payment.amount if payment.payment_success %>
    		</th>
    		<th><%= payment.amount %></th>
    		</tr>
    	<% end %>
    	<tr class="blue lighten-2">
	    	<th>Paid</th>
	        <th></th>
	        <th></th>
	        <th><%= total_paid %></th>
    	</tr>
    	<tr class="yellow lighten-2">
	    	<th>Pending Balance</th>
	        <th></th>
	        <th></th>
	        <th><%= price - total_paid %></th>
    	</tr>
    	<tr class="yellow">
	    	<th>Total Amount</th>
	        <th></th>
	        <th></th>
	        <th><%= price %></th>
    	</tr>
    </tbody>
</table>
