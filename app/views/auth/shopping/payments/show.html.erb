<% @payment.attributes.each do |k,v| %>
	<div>
	<span><%= k.to_s + ":" %></span><span><%= v.to_s %></span>
	</div>
<% end %>
<% if @payment.payment_success %>
	<div>Payment success</div>
<% elsif @payment.payment_failed %>
	<div>Payment failed</div>
<% else %>
	<%= payment_to_gateway_form(@payment) %>
<% end %>