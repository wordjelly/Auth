<%= form_for(@auth_shopping_payment, url: @auth_shopping_payment.new_record? ? payments_path : payment_path(@auth_shopping_payment), method: @auth_shopping_payment.new_record? ? :post : :put) do |f| %>
  <%= render :partial => "auth/shared/object_errors.html.erb", locals: {active_model_object: @auth_shopping_payment} %>
  
  <div class="form_fields">
    <% @auth_shopping_payment.class.attribute_names.keep_if{|c| !@auth_shopping_payment.class::FIELD_NAMES_TO_SKIP_WHILE_MAKING_FORM.include? c.to_s}.each do |attr| %>
      
      <%=
          text_field :payment, attr.to_sym , :value => @auth_shopping_payment.send("#{attr}")
      %>
      <%= 
          label :payment, attr.to_sym
      %>
    <% end %>

  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
