<% if payment_gateway = Auth.configuration.payment_gateway_info %>
		
	

	<% payment_options =  payment_options(@auth_shopping_payment,resource)%>

	<%= form_for(@auth_shopping_payment, as: :payment) do |f| %>
		<% payment_options[:hidden].each do |k,v| %>
			<%= f.hidden_field k, :value => v %>
		<% end %>
		<% payment_options[:visible].each do |k,v| %>
			<%= f.label k %>
			<%= f.text_field k, :value => v  %>
		<% end %>
		<%= f.hidden_field :payment_type, :value => "gateway" %>
		<%= f.submit 'Proceed' %>
	<% end %>

<% else %>

	You need to configure a payment gateway, Contact the site admin!

<% end %>